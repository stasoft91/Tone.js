{
  "compileOnSave": true,
  "compilerOptions": {
    "strictNullChecks": true,
    "target": "ES2022",
    "module": "ES2022",
    "noImplicitAny": false,
    "importHelpers": true,
    "noUnusedLocals": false,
    "removeComments": false,
    "outDir": "./build/esm",
    "sourceMap": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015",
      "es2022"
    ],
    "baseUrl": "./"
  },
  "include": [
    "Tone/**/*.ts",
    "test/**/*.ts"
  ]
}
